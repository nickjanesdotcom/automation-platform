{
  "name": "automation-platform",
  "version": "1.0.0",
  "type": "module",
  "description": "Multi-automation platform for managing various business workflows",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "node build.mjs",
    "start": "node dist/app.js",
    "deploy": "vercel --prod",
    "test": "tsx --test test/*.test.ts src/shared/services/*.test.ts",
    "test:unit": "tsx --test src/shared/services/*.test.ts",
    "test:integration": "tsx --test test/*.test.ts",
    "test:all": "npm run test:unit && npm run test:integration",
    "validate": "bash scripts/validate.sh"
  },
  "keywords": [
    "automation",
    "workflow",
    "notion",
    "slack",
    "webhooks"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@axiomhq/js": "^1.0.0",
    "@hono/node-server": "^1.19.5",
    "@notionhq/client": "^2.2.14",
    "@sentry/node": "^7.99.0",
    "@slack/web-api": "^6.11.2",
    "@types/cheerio": "^0.22.35",
    "@types/node": "^24.9.1",
    "@types/nodemailer": "^7.0.2",
    "@vercel/node": "^5.4.1",
    "cheerio": "^1.0.0-rc.12",
    "esbuild": "^0.25.11",
    "googleapis": "^131.0.0",
    "hono": "^4.0.0",
    "nodemailer": "^6.9.8",
    "p-retry": "^6.2.0",
    "resend": "^6.2.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240129.0",
    "tsx": "^4.7.0"
  }
}
