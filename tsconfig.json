{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": false,
    "types": ["node"]
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "dist", "test", "src"]
}
